        "src/js/communication.ts",
        "src/js/content/doOnce.ts",
        "src/js/content/export.ts",
        "src/js/content/i18n.ts",
        "src/js/content/main-talk.ts",
        "src/js/content/main.ts",
        "src/js/content/mentions.ts",
        "src/js/content/popup.ts",
        "src/js/content/profile.ts",
        "src/js/content/source.ts",
        "src/js/data/data.ts",
        "src/js/data/finder.ts",
        "src/js/data/index.ts",
        "src/js/data/interpreter.ts",
        "src/js/data/merger.ts",
        "src/js/data/spreadsheets.ts",
        "src/js/data/token.ts",
        "src/js/data/util.ts",
        "src/js/export-single.ts",
        "src/js/export.ts",
        "src/js/help.ts",
        "src/js/log.ts",
        "src/js/options/alerts.ts",
        "src/js/options/communication.ts",
        "src/js/options/main.ts",
        "src/js/options/manifests.ts",
        "src/js/options/settings.ts",
        "src/js/search.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
