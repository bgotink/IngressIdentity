{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "sourceMap": false,
        "lib": [
            "es5",
            "es2015",
            "es2016",
            "dom"
        ],
        "outDir": "build/intermediary/js"
    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "typings/index.d.ts",
        "typings/ingress-identity.d.ts",
        "src/js/**/*.ts"
